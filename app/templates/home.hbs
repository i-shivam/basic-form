<div class="container">
  <form method="POST">
     <input type="hidden" name="_csrf" value={{csrfToken}}>
    <div class="form-group col-md-6">
      <label for="uniqueNo">AadharNo</label>
      {{input value=model.id class="form-control" placeholder="1" type="text"}}
    </div>
    <div class="form-group col-md-6">
      <label for="inputEmail">Email</label>
      {{input value=model.email class="form-control" placeholder="email" type="email" }}
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="userFirstName">First Name</label>
        {{input value=model.firstName class="form-control" placeholder="text" type="text" }}
      </div>
      <div class="form-group col-md-6">
        <label for="userLastName">Last Name</label>
        {{input value=model.lastName class="form-control" placeholder="text" type="text" }}
      </div>
      <div class="form-group col-md-6">
        <label for="dateOfBirth">DateOfBirth</label>
        {{input value=model.dateOfBirth class="form-control" placeholder="01/01/2000" type="date" }}
      </div>
    </div>
    <div class="form-group col-md-6">
      <label for="mobileNo">MobileNo</label>
      {{input value=model.mobile class="form-control" placeholder="+919999999999" type="text" }}
    </div>
    <div class="form-group col-md-12">
      <label for="inputAddress">Address</label>
      {{input value=model.address class="form-control" placeholder="Apartment, studio, or floor" type="text" }}
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="inputCity">City</label>
        {{input type="text" class="form-control" value=model.cityName placeholder="alshka" }}
      </div>
      <div class="form-group col-md-4">
        <label for="inputState">State</label>
        {{input type="text" class="form-control" value=model.state placeholder="TN" }}
      </div>
      <div class="form-group col-md-2">
        <label for="inputZip">Zip</label>
        {{input type="text" class="form-control" value=model.areaZip placeholder=123456 }}
      </div>
    </div>
    {{form-button isValid=isFormValid recordPage=(action "addRecord") check=(action "checkAadhar")}} 
  </form>
</div>